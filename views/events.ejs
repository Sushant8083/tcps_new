<!-- Upcomming event -->
<div class="container">
    <h1 class="fw-bold text-center mt-3">Upcomming Events!</h1>
    <section class="bsb-author-2 py-3">
<div class="container">
  <div class="row justify-content-center">
    <% if (event && event.length > 0) { %>
        <% event.forEach(function(elem) { %>
          <div class="col-12 col-lg-10 col-xl-8 col-xxl-7 mt-3">
      <div class="card border-light-subtle p-4">
        <div class="row gy-3 align-items-center">
          <div class="col-md-4">
            <a href="#!" class="bsb-hover-image d-block rounded overflow-hidden">
              <img class="img-fluid author-avatar bsb-scale bsb-hover-scale-up" loading="lazy" src="<%=elem.eventImage%>" alt="Iris Henry">
            </a>
          </div>
          <div class="col-md-8">
            <div class="card-body">
              <h3 class="card-title mb-2">
                <a class="card-link link-dark text-decoration-none" href="#!"><%=elem.eventName%></a>
              </h3>
              <h5 class="card-subtitle mb-2 text-body-secondary"><%=elem.eventDate%></h5>
              <p class="card-text mb-3"><%=elem.Description%></p>
            </div>
          </div>
        </div>
      </div>
          </div>
          <% }) %>
            <% } else { %>
                <div class="col-12 text-center">
                    <h1>No Upcomming Events</h1>
                </div>
            <% } %>
  </div>
</div>
</section>
